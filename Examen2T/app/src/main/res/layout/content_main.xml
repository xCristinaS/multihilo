<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="c.examen2t.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/lblCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ciudad"/>

    <EditText
        android:id="@+id/txtBuscar"
        android:layout_below="@id/lblCiudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombre_buscar"/>

    <TextView
        android:id="@+id/lblNombre"
        android:layout_below="@id/txtBuscar"
        android:layout_marginTop="@dimen/margin_top_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontSizeNombre"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lblDescripcion"
        android:layout_below="@id/lblNombre"
        android:layout_marginTop="@dimen/margin_top_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgIco"
        android:layout_below="@id/lblNombre"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/tamanioImg"
        android:layout_height="@dimen/tamanioImg"
        android:scaleType="centerCrop"
        android:contentDescription="@string/iconotiempo" />

    <TextView
        android:id="@+id/lblTemp"
        android:layout_below="@id/lblDescripcion"
        android:layout_marginTop="@dimen/margin_top_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swAlarma"
        android:layout_below="@id/imgIco"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/imgIco"
        android:layout_toLeftOf="@id/swAlarma"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarma"/>

    <TextView
        android:id="@+id/lblLluvia"
        android:layout_below="@id/lblTemp"
        android:layout_marginTop="@dimen/margin_top_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblHumedad"
        android:layout_below="@id/lblLluvia"
        android:layout_marginTop="@dimen/margin_top_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblViento"
        android:layout_below="@id/lblHumedad"
        android:layout_marginTop="@dimen/margin_top_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblNubosidad"
        android:layout_below="@id/lblViento"
        android:layout_marginTop="@dimen/margin_top_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblAmanecer"
        android:layout_below="@id/lblNubosidad"
        android:layout_marginTop="@dimen/margin_top_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblAtardecer"
        android:layout_below="@id/lblAmanecer"
        android:layout_marginTop="@dimen/margin_top_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
