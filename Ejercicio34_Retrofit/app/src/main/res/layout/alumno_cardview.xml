<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp16"
    android:layout_marginBottom="@dimen/dp16"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginRight="@dimen/dp10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp90"
            android:layout_margin="@dimen/dp16" />

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:layout_toRightOf="@id/imgFoto"
            android:text="Nombre: " />

        <TextView
            android:id="@+id/lblEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblNombre"
            android:layout_margin="@dimen/dp16"
            android:layout_toRightOf="@id/imgFoto"
            android:text="Edad" />

        <TextView
            android:id="@+id/lblCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblEdad"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_toRightOf="@id/imgFoto"
            android:text="curso" />

        <Button
            android:id="@+id/btnEliminar"
            android:text="@string/eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lblCurso"
            android:layout_below="@id/lblEdad"
            android:layout_marginLeft="@dimen/dp80"
            android:layout_marginTop="-20dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>